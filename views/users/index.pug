extends ../../layouts/common.pug
block content
    .container 
        .row.d-flex.justify-content-end.mt-3.align-items-end
            h1.flex-grow-1.mb-0 Users
            form(action="/users/search").form-inline.order-1.mb-0
                .form-group
                    input(class="form-control" type="text" name="q" value= value placeholder="Tìm theo tên")
                button(type="submit" class="btn btn-primary ml-2 ") Search
                
            
            a.order-1(href="/users/create" class="btn btn-primary ml-5 col-md-2", style="display: inline-table;") Create User
        ul
            each user in users
                li
                    span= user.name 
                    span &nbsp
                    a(href="/users/" + user.id) View